<%- contentFor('body') %>
	<link rel="stylesheet" type="text/css" href="/css/jquery-ui.css">
	<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<link rel="stylesheet" type="text/css" href="/css/historicoPrescricao.css">
	<link rel="stylesheet" type="text/css" href="/css/aba.css">

	<div class="lista">
		<div class="titulo">Histórico Prescrições
			<%= acolhido.nome %>
		</div>
		<div class="botao">
			<input type="button" value="Voltar">
		</div>
	</div>

	<div id="accordion">
		<h3 class="titulo-data">12/06/2017 à 19/06/2017</h3>
		<%for (historicoPrescricao of historicoPrescricoes){%>
		<ul class="lista-acolhidos">
			<div class="tabs-container">
				<div class="row">
					<input type="radio" name="tabs" class="tabs" id="tab1" checked>
					<label tabindex="4" for="tab1" onkeypress="ativaAbas(1);">Contínuo</label>
					<div class="scroll">
						<div class="table-responsive">
							<%- include edit%>
						</div>
					</div>

					<input type="radio" name="tabs" class="tabs" id="tab2">
					<label tabindex="5" for="tab2" onkeypress="ativaAbas(2);">Eventual</label>
					<div class="scroll">
						<div class="table-responsive">
							<%- include edit%>
						</div>
					</div>

					<input type="radio" name="tabs" class="tabs" id="tab3">
					<label tabindex="6" for="tab3" onkeypress="ativaAbas(3);">Pomada</label>
					<div class="scroll">
						<div class="table-responsive">
							<%- include edit%>
						</div>
					</div>


					<input type="radio" name="tabs" class="tabs" id="tab4">
					<label tabindex="7" for="tab4" onkeypress="ativaAbas(4);">Neurologia</label>
					<div class="scroll">
						<div class="table-responsive">
							<%- include edit%>
						</div>
					</div>

					<input type="radio" name="tabs" class="tabs" id="tab5">
					<label tabindex="8" for="tab5" onkeypress="ativaAbas(5);">Se necessário</label>
					<div class="scroll">
						<div class="table-responsive">
							<%- include edit%>
						</div>
					</div>

					<input type="radio" name="tabs" class="tabs" id="tab6">
					<label tabindex="9" for="tab6" onkeypress="ativaAbas(6);">Cuidados</label>
					<div class="scroll">
						<div class="table-responsive">
							<%- include edit %>
						</div>
					</div>

					<input type="radio" name="tabs" class="tabs" id="tab7">
					<label tabindex="10" for="tab7" onkeypress="ativaAbas(7);">Dieta</label>
					<div class="scroll">
						<div class="table-responsive">
							<%- include edit%>
						</div>
					</div>
				</div>
			</div>
			<%}%>
		</ul>
		<div class="print">
			<a href="#">
				<i class="fa fa-print"></i>
			</a>
		</div>
	</div>

	<script> 
		function ativaAbas(abas) {
			document.getElementById("tab" + abas).checked = "checked";
		}
	</script>

	<script src="/js/jquery-1.8.2.min.js"></script>
	<script src="/js/jquery-ui.js"></script>
	<script src="/js/historicoPrescricao.js"></script>